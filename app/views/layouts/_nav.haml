.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"}
        = image_tag("logo-livework.svg")
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        - @categories.each do |category|
          - if category.descendants.empty?
            %li= link_to category.name.upcase
          - else
            %li.dropdown-hover
              %a.dropdown-toggle{"data-toggle" => "dropdown"}
                = category.name.upcase
                %span.caret
                %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu"}
                  - category.descendants.each do |top_tier|
                    - if top_tier.descendants.empty?
                      %li= link_to top_tier.name.upcase
                    - else
                      %li.dropdown-submenu.dropdown-menu-right
                        = top_tier.name.upcase
                        %ul.dropdown-menu.dropdown-hover{"aria-labelledby" => "category_#{category.id}"}
                          - top_tier.descendants.each do |second_tier|
                            %li= link_to second_tier.name.upcase

