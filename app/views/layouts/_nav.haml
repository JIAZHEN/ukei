.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        = image_tag(@logo.image.url(:medium))
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.text-light
        - @categories.each do |category|
          - if category.children.empty?
            %li= link_to category.public_send("name#{@attr_suffix}".to_sym).upcase, category_path(category)
          - else
            %li.dropdown-hover
              %a.dropdown-toggle{"data-toggle" => "dropdown"}
                = category.public_send("name#{@attr_suffix}".to_sym).upcase
                %span.caret
                %ul.dropdown-menu
                  - category.children.sort.each do |first_tier|
                    - if first_tier.children.empty?
                      %li= link_to first_tier.public_send("name#{@attr_suffix}".to_sym).upcase, category_path(first_tier)
                    - else
                      %li.dropdown-submenu.dropdown-menu-right
                        %a
                          = first_tier.public_send("name#{@attr_suffix}".to_sym).upcase
                          %i.fa.fa-caret-right
                        %ul.dropdown-menu.dropdown-hover
                          - first_tier.children.sort.each do |second_tier|
                            %li= link_to second_tier.public_send("name#{@attr_suffix}".to_sym).upcase, category_path(second_tier)
        %li= link_to "CHINA DESK", china_desk_path
        %li= link_to "CONTACT", contact_path

:javascript
  $(".dropdown-hover").hover((function() {
    return $(this).toggleClass("open");
  }), function() {
    return $(this).toggleClass("open");
  });
