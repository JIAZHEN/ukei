%footer.footer.text-light
  .contain-padding
    .row
      .col-lg-3.col-md-6
        %ul
          %li
            %h5= link_to "SERVICES", category_path(@services)
          - @services.children.sort.each do |first_tier|
            %li= link_to first_tier.public_send("name#{@attr_suffix}".to_sym), category_path(first_tier)
      .col-lg-3.col-md-6
        %ul
          %li
            %h5= link_to "SECTORS", category_path(@sectors)
          - @sectors.children.sort.each do |first_tier|
            %li= link_to first_tier.public_send("name#{@attr_suffix}".to_sym), category_path(first_tier)
      .col-lg-3.col-md-6
        %ul
          %li
            %h5
              %a{:href => contact_path} CONTACT US
          %li
            %a{:href => "mailto:info@ukei.com", :title => "Send an e-mail to UKEI"} info@ukei.com
          %br/
          %li
            %h5= link_to "LOCATION", location_path("london")
            %address
              RSB Solictors
              %br/
              Unit 109, Cremer business centre
              %br/
              37 Cremer Street, London
              %br/
              E2 8HD

      .col-lg-3.col-md-6
        %ul
          %li
            %h5 CONNECT
          %li= link_to "Wechat"
          %li= link_to "Weibo"
          %li= link_to "Facebook"
          %li= link_to "Linkedin"

.footer_copy
  .contain-padding
    .row
      .col-lg-12{:role => "navigation"}
        %ul#menu-footer-navigation.menu
          %li
            %a{:href => root_path} Â© 2015 RSB
          %li.menu-terms-of-use
            %a{:href => terms_path} Terms of use
          %li.menu-privacy-policy
            %a{:href => privacy_path} Privacy policy
